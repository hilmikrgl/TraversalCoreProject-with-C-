@model ForgetPasswordViewModel
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container d-flex align-items-center justify-content-center" style="min-height: 100vh; background-color: #f8f9fa;">
    <div class="card shadow-lg" style="max-width: 400px; width: 100%;">
        <div class="card-body">
            <h3 class="card-title text-center mb-4">Şifre Yenileme</h3>
            <form method="post">
                <div class="form-group mb-3">
                    <label for="email">Mail Adresinizi Giriniz</label>
                    <input type="email" id="email" class="form-control" asp-for="Mail" placeholder="E-posta adresinizi girin" required />
                </div>
                <button type="submit" class="btn btn-primary w-100">Şifre Yenileme Linki Gönder</button>
            </form>
        </div>
    </div>
</div>
