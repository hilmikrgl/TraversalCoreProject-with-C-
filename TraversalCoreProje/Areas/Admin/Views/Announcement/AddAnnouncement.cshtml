@model AnnouncementAddDto
@{
    ViewData["Title"] = "AddAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Duyuru Ekleme Sayfası</h3>
        </div>
        <div class="card-body p-4">
            <form method="post">
                <div class="mb-3">
                    <label for="title" class="form-label fw-bold">Duyuru Başlığı</label>
                    <input type="text" asp-for="Title" class="form-control" id="title" placeholder="Duyuru başlığını giriniz" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="content" class="form-label fw-bold">Duyuru İçeriği</label>
                    <textarea asp-for="Content" class="form-control" id="content" placeholder="Duyuru içeriğini giriniz" rows="4"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-primary px-4">Duyuruyu Oluştur</button>
                </div>
            </form>
        </div>
    </div>
</div>
