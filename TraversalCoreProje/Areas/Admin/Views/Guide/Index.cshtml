@using EntityLayer.Concrete
@model List<Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<style>
    img {
        border-radius: 50%;
        object-fit: cover;
    }

    h1 {
        text-align: center;
        color: #343a40;
        font-size: 2.5rem;
        margin-bottom: 20px;
    }

    .table {
        width: 100%;
        border-radius: 8px;
        overflow: hidden;
        border: 1px solid #ddd;
    }

        .table th, .table td {
            padding: 15px;
            text-align: center;
        }

        .table th {
            background-color: #007bff;
            color: white;
            font-size: 1.1rem;
        }

        .table td {
            background-color: #f8f9fa;
        }

    .btn {
        font-size: 1rem;
        padding: 10px 15px;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

    .btn-outline-warning:hover {
        background-color: #ffc107;
        color: white;
    }

    .btn-outline-info:hover {
        background-color: #17a2b8;
        color: white;
    }

    .btn-outline-success:hover {
        background-color: #28a745;
        color: white;
    }

    .btn-outline-primary:hover {
        background-color: #007bff;
        color: white;
    }

    .add-guide-btn {
        display: block;
        margin: 30px auto;
        padding: 12px 30px;
        font-size: 1.2rem;
        background-color: #007bff;
        color: white;
        border-radius: 5px;
        text-align: center;
        transition: all 0.3s ease;
    }

        .add-guide-btn:hover {
            background-color: #0056b3;
        }
</style>

<h1>Rehber Listesi</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Görsel</th>
            <th>Ad Soyad</th>
            <th>Açıklama</th>
            <th>Durum</th>
            <th>Düzenle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td><img src="@item.Image" height="50" width="50" /></td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>
                    @if (item.Status == true)
                    {
                        <a href="/Admin/Guide/ChangeToFalse/@item.GuideID" class="btn btn-outline-warning">Pasif Yap</a>
                    }
                    else
                    {
                        <a href="/Admin/Guide/ChangeToTrue/@item.GuideID" class="btn btn-outline-info">Aktif Yap</a>
                    }
                </td>
                <td><a href="/Admin/Guide/EditGuide/@item.GuideID" class="btn btn-outline-success">Düzenle</a></td>
            </tr>
        }
    </tbody>
</table>

<a href="/Admin/Guide/AddGuide/" class="add-guide-btn">Yeni Rehber Girişi</a>
